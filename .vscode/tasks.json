{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Colcon and Docker build",
            "type": "shell",
            "command": "bash -i -c 'source install/setup.bash && colcon build && docker build -f Dockerfile --tag orion'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build for ARM",
            "type": "shell",
            "command": "bash -i -c 'source install/setup.bash && colcon build && docker build -f Dockerfile --tag orion --arch=arm64'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run Container",
            "type": "shell",
            "command": "bash -i -c 'docker run --rm -it orion'",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "close": false
            },
            "problemMatcher": []
        }
    ]
}